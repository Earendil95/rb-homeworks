<ul>
  <h1 style="margin-bottom: 10px">
    Books
    <div style="float: right; height: 100%; display: inline-block; vertical-align: center">
      <%= link_to "New", new_book_path %>
    </div>
  </h1>
  <% @books.each do |book| %>
    <li style="margin-bottom: 10px; border: 1px solid grey">
      <%= link_to book.title.truncate(160), book_path(book) %><br>
      <%= book.author %><br>
      <%= book.publisher %><br>
      <%= book.year %>
      <%= link_to "Edit", edit_book_path(book) %> | <%= link_to "Delete", book_path(book), method: :delete %>
    </li>
  <% end %>
</ul>